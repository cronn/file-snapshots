{
  "name": "@cronn/vitest-file-snapshots",
  "version": "0.0.1",
  "description": "Wriote tests with Vitest using file snapshots",
  "keywords": [
    "vitest",
    "file snapshots"
  ],
  "bugs": {
    "url": "https://github.com/cronn/vitest-file-snapshots/issues"
  },
  "author": "cronn",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cronn/vitest-file-snapshots.git"
  },
  "homepage": "https://github.com/cronn/vitest-file-snapshots",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --max-warnings=0 src/**/*",
    "lint:fix": "eslint --fix src/**/*",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "compile": "tsc",
    "build": "tsup",
    "ci": "pnpm run format:check && pnpm run compile && pnpm run lint && pnpm run test"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    "./extend-expect": {
      "types": "./dist/extend-expect.d.ts",
      "import": "./dist/extend-expect.js"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@changesets/cli": "2.28.1",
    "@eslint/compat": "1.2.7",
    "@eslint/eslintrc": "3.3.0",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/node": "22.13.10",
    "@vitest/coverage-istanbul": "3.0.9",
    "@vitest/expect": "3.0.9",
    "eslint": "9.22.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-unused-imports": "4.1.4",
    "prettier": "3.5.3",
    "tsup": "8.4.0",
    "typescript": "5.8.2",
    "typescript-eslint": "8.27.0"
  },
  "peerDependencies": {
    "vitest": "^3"
  }
}
