{
  "name": "@cronn/lib-file-snapshots",
  "version": "1.0.0",
  "description": "The library agnostic core for testing file snapshots",
  "keywords": [
    "file snapshots"
  ],
  "bugs": {
    "url": "https://github.com/cronn/file-snapshots/issues"
  },
  "author": "cronn",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cronn/file-snapshots.git",
    "directory": "packages/lib-file-snapshots"
  },
  "homepage": "https://github.com/cronn/file-snapshots",
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": "^20 || ^22 || >=24"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": ">=24.13 <25",
      "onFail": "error"
    },
    "packageManager": {
      "name": "pnpm",
      "version": ">=10.28.2 <11",
      "onFail": "error"
    }
  },
  "scripts": {
    "lint:check": "eslint src/ --max-warnings=0",
    "lint:fix": "eslint src/ --max-warnings=0 --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "compile": "tsc",
    "build": "tsdown"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@cronn/shared-configs": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-unused-imports": "catalog:",
    "prettier": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  }
}
