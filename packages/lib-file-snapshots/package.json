{
  "name": "@cronn/lib-file-snapshots",
  "version": "0.10.0",
  "description": "The library agnostic core for testing file snapshots",
  "keywords": [
    "file snapshots"
  ],
  "bugs": {
    "url": "https://github.com/cronn/file-snapshots/issues"
  },
  "author": "cronn",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cronn/file-snapshots.git",
    "directory": "packages/lib-file-snapshots"
  },
  "homepage": "https://github.com/cronn/file-snapshots",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "scripts": {
    "lint:check": "eslint src/ --max-warnings=0",
    "lint:fix": "eslint src/ --max-warnings=0 --fix",
    "check": "pnpm run compile && pnpm run lint:check",
    "fix": "pnpm run lint:fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "compile": "tsc",
    "build": "tsup",
    "ci": "pnpm run check && pnpm run test:coverage && pnpm run build"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@cronn/shared-configs": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-istanbul": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-unused-imports": "catalog:",
    "jiti": "catalog:",
    "prettier": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  }
}
