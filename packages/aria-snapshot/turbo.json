{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "playwright:install": { "outputLogs": "new-only" },
    "test": {
      "dependsOn": ["test:unit", "test:integration"]
    },
    "test:unit": {
      "dependsOn": ["^build", "compile"],
      "outputLogs": "new-only"
    },
    "test:unit:coverage": {
      "dependsOn": ["^build", "compile"],
      "outputs": ["coverage/**"],
      "outputLogs": "new-only"
    },
    "test:integration": {
      "dependsOn": ["^build", "compile", "playwright:install"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "outputLogs": "new-only"
    },
    "check": {
      "dependsOn": [
        "compile",
        "lint:check",
        "test:unit:coverage",
        "test:integration",
        "//#format:check"
      ]
    }
  }
}
