{
  "name": "@cronn/vitest-file-snapshots",
  "version": "0.18.0",
  "description": "Write tests with Vitest using file snapshots",
  "keywords": [
    "vitest",
    "file snapshots"
  ],
  "bugs": {
    "url": "https://github.com/cronn/file-snapshots/issues"
  },
  "author": "cronn",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cronn/file-snapshots.git",
    "directory": "packages/vitest-file-snapshots"
  },
  "homepage": "https://github.com/cronn/file-snapshots",
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": "^20 || ^22 || >=24"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": ">=24.13 <25",
      "onFail": "error"
    },
    "packageManager": {
      "name": "pnpm",
      "version": ">=10.28.2 <11",
      "onFail": "error"
    }
  },
  "scripts": {
    "lint:check": "eslint src/ --max-warnings=0",
    "lint:fix": "eslint src/ --max-warnings=0 --fix",
    "test:core": "vitest run",
    "test:update-new": "cross-env UPDATE_TYPE=new CI=false GITHUB_ACTIONS= vitest run ./__tests__/update-snapshot.test.ts",
    "test:update-all": "cross-env UPDATE_TYPE=all CI=false GITHUB_ACTIONS= vitest run --update ./__tests__/update-snapshot.test.ts",
    "test:update-none": "cross-env UPDATE_TYPE=none CI=true vitest run ./__tests__/update-snapshot.test.ts",
    "test:coverage": "vitest run --coverage",
    "compile": "tsc",
    "build": "tsdown && node scripts/fix-declaration-file.ts"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    "./register": {
      "types": "./dist/register.d.mts",
      "default": "./dist/register.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@cronn/lib-file-snapshots": "workspace:*"
  },
  "devDependencies": {
    "@cronn/shared-configs": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/expect": "catalog:",
    "cross-env": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-unused-imports": "catalog:",
    "package-directory": "catalog:",
    "prettier": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "vitest": "^3.2 || ^4"
  }
}
