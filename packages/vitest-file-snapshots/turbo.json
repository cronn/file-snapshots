{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "test": {
      "dependsOn": [
        "test:core",
        "test:update-new",
        "test:update-all",
        "test:update-none"
      ]
    },
    "test:core": {
      "dependsOn": ["^build", "compile"],
      "outputLogs": "new-only"
    },
    "test:update-new": {
      "dependsOn": ["^build", "compile"],
      "outputLogs": "new-only"
    },
    "test:update-all": {
      "dependsOn": ["^build", "compile"],
      "outputLogs": "new-only"
    },
    "test:update-none": {
      "dependsOn": ["^build", "compile"],
      "outputLogs": "new-only"
    },
    "test:coverage": {
      "dependsOn": ["^build", "compile"],
      "outputs": ["coverage/**"],
      "outputLogs": "new-only"
    },
    "check": {
      "dependsOn": [
        "compile",
        "lint:check",
        "test:coverage",
        "test:update-new",
        "test:update-all",
        "test:update-none",
        "//#format:check"
      ]
    }
  }
}
