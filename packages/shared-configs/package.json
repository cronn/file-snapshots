{
  "name": "@cronn/shared-configs",
  "version": "0.0.0",
  "description": "Internal shared configs for the monorepo",
  "author": "cronn",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cronn/file-snapshots.git",
    "directory": "packages/shared-configs"
  },
  "homepage": "https://github.com/cronn/file-snapshots",
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": "^20 || ^22 || >=24"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": ">=24.13 <25",
      "onFail": "error"
    },
    "packageManager": {
      "name": "pnpm",
      "version": ">=10.28.2 <11",
      "onFail": "error"
    }
  },
  "scripts": {
    "lint:check": "eslint src/ --max-warnings=0",
    "lint:fix": "eslint src/ --max-warnings=0 --fix",
    "compile": "tsc",
    "build": "tsdown --config-loader unrun"
  },
  "type": "module",
  "exports": {
    "./tsdown": {
      "types": "./dist/tsdown.d.mts",
      "default": "./dist/tsdown.mjs"
    },
    "./vitest": {
      "types": "./dist/vitest.d.mts",
      "default": "./dist/vitest.mjs"
    },
    "./eslint": {
      "types": "./dist/eslint.d.mts",
      "default": "./dist/eslint.mjs"
    },
    "./playwright": {
      "types": "./dist/playwright.d.mts",
      "default": "./dist/playwright.mjs"
    }
  },
  "devDependencies": {
    "@playwright/test": "catalog:",
    "@trivago/prettier-plugin-sort-imports": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-unused-imports": "catalog:",
    "prettier": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  }
}
