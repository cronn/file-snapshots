{
  "name": "@cronn/playwright-file-snapshots",
  "version": "0.8.1",
  "description": "Write tests with Playwright using file snapshots",
  "keywords": [
    "playwright",
    "file snapshots"
  ],
  "bugs": {
    "url": "https://github.com/cronn/file-snapshots/issues"
  },
  "author": "cronn",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cronn/file-snapshots.git",
    "directory": "packages/playwright-file-snapshots"
  },
  "homepage": "https://github.com/cronn/file-snapshots",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "scripts": {
    "lint:check": "eslint src/ --max-warnings=0",
    "lint:fix": "eslint src/ --max-warnings=0 --fix",
    "check": "pnpm run compile && pnpm run lint:check",
    "fix": "pnpm run lint:fix",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:integration": "playwright test",
    "playwright:install": "playwright install chromium",
    "compile": "tsc",
    "build": "tsup",
    "start": "serve static/",
    "ci": "pnpm run check && pnpm run test:unit:coverage && pnpm run test:integration && pnpm run build"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@cronn/lib-file-snapshots": "workspace:*"
  },
  "devDependencies": {
    "@cronn/shared-configs": "workspace:*",
    "@changesets/cli": "catalog:",
    "@playwright/test": "catalog:",
    "@trivago/prettier-plugin-sort-imports": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-istanbul": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-unused-imports": "catalog:",
    "jiti": "catalog:",
    "prettier": "catalog:",
    "serve": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:",
    "yaml": "catalog:"
  },
  "peerDependencies": {
    "@playwright/test": "^1.5",
    "yaml": "^2"
  }
}
