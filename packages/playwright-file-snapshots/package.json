{
  "name": "@cronn/playwright-file-snapshots",
  "version": "0.37.0",
  "description": "Write tests with Playwright using file snapshots",
  "keywords": [
    "playwright",
    "file snapshots"
  ],
  "bugs": {
    "url": "https://github.com/cronn/file-snapshots/issues"
  },
  "author": "cronn",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cronn/file-snapshots.git",
    "directory": "packages/playwright-file-snapshots"
  },
  "homepage": "https://github.com/cronn/file-snapshots",
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": "^20 || ^22 || >=24"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": ">=24.13 <25",
      "onFail": "error"
    },
    "packageManager": {
      "name": "pnpm",
      "version": ">=10.28.2 <11",
      "onFail": "error"
    }
  },
  "scripts": {
    "lint:check": "eslint src/ tests/ --max-warnings=0",
    "lint:fix": "eslint src/ tests/ --max-warnings=0 --fix",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:integration:core": "playwright test",
    "test:integration:update-all": "playwright test --grep @update-all --update-snapshots all",
    "test:integration:update-changed": "playwright test --grep @update-changed --update-snapshots changed",
    "test:integration:update-none": "playwright test --grep @update-none --update-snapshots none",
    "playwright:install": "playwright install chromium",
    "compile": "tsc",
    "build": "tsup",
    "start": "serve test-pages/"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@cronn/lib-file-snapshots": "workspace:*",
    "package-directory": "catalog:"
  },
  "devDependencies": {
    "@changesets/cli": "catalog:",
    "@cronn/aria-snapshot": "workspace:*",
    "@cronn/element-snapshot": "workspace:*",
    "@cronn/shared-configs": "workspace:*",
    "@playwright/test": "catalog:",
    "@trivago/prettier-plugin-sort-imports": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-unused-imports": "catalog:",
    "prettier": "catalog:",
    "serve": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@playwright/test": "^1.55"
  }
}
