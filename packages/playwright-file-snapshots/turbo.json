{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "playwright:install": {},
    "test:unit": {
      "dependsOn": ["^build", "compile"]
    },
    "test:unit:coverage": {
      "dependsOn": ["^build", "compile"],
      "outputs": ["coverage/**"]
    },
    "test:integration": {
      "dependsOn": [
        "^build",
        "compile",
        "playwright:install",
        "copy:browser-lib"
      ],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "check": {
      "dependsOn": [
        "compile",
        "lint:check",
        "test:unit:coverage",
        "test:integration",
        "//#format:check"
      ]
    },
    "copy:browser-lib": {
      "dependsOn": ["^build", "build"]
    }
  }
}
