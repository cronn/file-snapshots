{
  "name": "@cronn/element-snapshot",
  "version": "0.13.0",
  "description": "Element snapshots for Playwright",
  "author": "cronn",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cronn/file-snapshots.git",
    "directory": "packages/element-snapshot"
  },
  "homepage": "https://github.com/cronn/file-snapshots",
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": "^20 || ^22 || >=24"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": ">=24.13 <25",
      "onFail": "error"
    },
    "packageManager": {
      "name": "pnpm",
      "version": ">=10.28.2 <11",
      "onFail": "error"
    }
  },
  "scripts": {
    "lint:check": "eslint src/ --max-warnings=0",
    "lint:fix": "eslint src/ --max-warnings=0 --fix",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:integration": "playwright test",
    "playwright:install": "playwright install chromium",
    "compile": "tsc",
    "build": "tsdown"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "package-directory": "catalog:"
  },
  "devDependencies": {
    "@cronn/playwright-file-snapshots": "workspace:*",
    "@cronn/shared-configs": "workspace:*",
    "@cronn/test-utils": "workspace:*",
    "@playwright/test": "catalog:",
    "@trivago/prettier-plugin-sort-imports": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-unused-imports": "catalog:",
    "prettier": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@playwright/test": "^1.55"
  }
}
